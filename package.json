{
  "name": "loopstack",
  "displayName": "Loopstack AI Workflow Automation Framework",
  "description": "A monorepo to maintain loopstack core modules, templates and frontend applications",
  "version": "0.17.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "index.js",
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm install --package-lock-only --prefer-offline",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "ncu": "ncu",
    "ncu:interactive": "ncu -i",
    "ncu:update": "ncu -u",
    "package:check": "syncpack list-mismatches",
    "package:fix": "syncpack fix-mismatches",
    "package:format": "syncpack format",
    "package:update": "syncpack update",
    "prepare": "husky",
    "prerelease:enter": "changeset pre enter rc",
    "prerelease:exit": "changeset pre exit",
    "refresh-lock": "rm -rf node_modules package-lock.json && npm install --package-lock-only --include=optional --os=linux --os=darwin --cpu=x64 --cpu=arm64 && npm install",
    "test": "turbo run test",
    "watch": "turbo run watch"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.12",
    "@nestjs/typeorm": "^11.0.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.0.10",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "syncpack": "^13.0.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.7.5",
    "typeorm": "^0.3.28",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint"
    ],
    "*.{json,md,css,yaml,yml}": [
      "prettier --check"
    ]
  },
  "packageManager": "npm@11.8.0",
  "workspaces": [
    "packages/*",
    "frontend/*",
    "installer/*",
    "templates/*",
    "generators/*",
    "registry/*/*",
    "workspace/*/*"
  ]
}
