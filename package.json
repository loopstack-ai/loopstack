{
  "name": "loopstack",
  "displayName": "Loopstack AI Workflow Automation Framework",
  "description": "A monorepo to maintain loopstack core modules, templates and frontend applications",
  "version": "0.17.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "index.js",
  "scripts": {
    "build": "turbo run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "prepare": "husky",
    "test": "turbo run test",
    "watch": "turbo run watch",
    "changeset:version": "changeset version && npm install --package-lock-only --prefer-offline"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/eslintrc": "^3.3.4",
    "@eslint/js": "^10.0.1",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.14",
    "@nestjs/typeorm": "^11.0.0",
    "@swc/cli": "^0.7.0",
    "@swc/core": "^1.15.13",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.24",
    "@types/node": "^25.3.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "syncpack": "^14.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "turbo": "^2.8.10",
    "typeorm": "^0.3.28",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint"
    ],
    "*.{json,md,css,yaml,yml}": [
      "prettier --check"
    ]
  },
  "packageManager": "npm@11.10.1",
  "workspaces": [
    "packages/*",
    "frontend/*",
    "installer/*",
    "templates/*",
    "generators/*",
    "registry/*/*",
    "client/*"
  ]
}
