{
  "name": "@loopstack/app-template",
  "version": "0.16.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/loopstack-ai/app-template"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nodemon --watch src --ext ts,js,yml,yaml --ignore src/**/*.spec.ts --exec \"nest start\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "tag": "git tag -a v$npm_package_version -m \"Release version $npm_package_version\" && git tag -f latest",
    "loopstack": "ts-node src/cli.ts",
    "loopstack:dev": "tsx src/cli.ts",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@loopstack/api": "^0.17.0",
    "@loopstack/cli-module": "^0.16.1",
    "@loopstack/common": "^0.17.0",
    "@loopstack/core": "^0.17.0",
    "@loopstack/core-ui-module": "^0.17.0",
    "@loopstack/create-chat-message-tool": "^0.16.3",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "nest-commander": "^3.16.1",
    "pg": "^8.13.3",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "maxWorkers": 1
  }
}
