{
  "name": "@loopstack/chat-example-workflow",
  "displayName": "Loopstack Chat Example Workflow",
  "description": "An example chat workflow to interact with an LLM.",
  "keywords": [
    "assistant",
    "chat",
    "example",
    "llm",
    "workflow"
  ],
  "version": "0.20.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/ai-module": "^0.20.0",
    "@loopstack/common": "^0.20.0",
    "@loopstack/core-ui-module": "^0.20.0",
    "@loopstack/create-chat-message-tool": "^0.20.0",
    "@nestjs/common": "^11.1.12",
    "zod": "^4.3.5"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "maxWorkers": 1,
    "testTimeout": 10000,
    "forceExit": true
  },
  "loopstack": {
    "module": "src/chat-example.module.ts",
    "workflows": [
      "src/chat.workflow.ts"
    ],
    "installModes": [
      "add",
      "install"
    ]
  }
}
