{
  "name": "@loopstack/custom-tool-example-module",
  "displayName": "Loopstack Custom Tool Example Module",
  "description": "A complete example demonstrating how to implement and use a custom tool in a workflow",
  "keywords": [
    "custom",
    "example",
    "integration",
    "tool",
    "workflow"
  ],
  "version": "0.19.0-rc.1",
  "license": "Apache-2.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/common": "^0.19.0-rc.1",
    "@loopstack/create-chat-message-tool": "^0.19.0-rc.1",
    "@nestjs/common": "^11.1.12",
    "zod": "^4.3.5"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "testEnvironment": "node",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testTimeout": 10000,
    "forceExit": true,
    "maxWorkers": 1
  },
  "loopstack": {
    "module": "src/custom-tool.module.ts",
    "workflows": [
      "src/workflows/custom-tool-example.workflow.ts"
    ]
  }
}
