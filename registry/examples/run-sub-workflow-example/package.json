{
  "name": "@loopstack/run-sub-workflow-example",
  "displayName": "Run Sub Workflow Example",
  "description": "Execute child workflows from within a parent workflow for hierarchical workflow composition",
  "keywords": [
    "example",
    "execute",
    "nested",
    "run",
    "sub-workflow",
    "workflow"
  ],
  "version": "0.20.4",
  "license": "Apache-2.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://github.com/loopstack-ai"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/common": "^0.21.0",
    "@loopstack/core-ui-module": "^0.20.4",
    "@loopstack/create-chat-message-tool": "^0.20.4",
    "@nestjs/common": "^11.1.14",
    "zod": "^4.3.6"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "testEnvironment": "node",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testTimeout": 10000,
    "forceExit": true,
    "maxWorkers": 1
  },
  "loopstack": {
    "installModes": [
      "add",
      "install"
    ],
    "modules": [
      {
        "path": "src/run-sub-workflow-example.module.ts",
        "className": "RunSubWorkflowExampleModule"
      }
    ],
    "workflows": [
      {
        "path": "src/run-sub-workflow-example-parent.workflow.ts",
        "className": "RunSubWorkflowExampleParentWorkflow",
        "propertyName": "runSubWorkflowExampleParent"
      },
      {
        "path": "src/run-sub-workflow-example-sub.workflow.ts",
        "className": "RunSubWorkflowExampleSubWorkflow",
        "propertyName": "runSubWorkflowExampleSub",
        "options": {
          "options": {
            "visible": false
          }
        }
      }
    ]
  }
}
