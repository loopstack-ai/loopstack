{
  "name": "@loopstack/dynamic-routing-example-workflow",
  "displayName": "Loopstack Dynamic Routing Example Worflow",
  "description": "A workflow demonstrating how to create dynamic routing an a workflow",
  "keywords": [
    "example",
    "if",
    "routing",
    "transition",
    "workflow"
  ],
  "version": "0.20.3",
  "license": "Apache-2.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/common": "^0.20.3",
    "@loopstack/create-chat-message-tool": "^0.20.3",
    "@nestjs/common": "^11.1.14",
    "zod": "^4.3.6"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "testEnvironment": "node",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testTimeout": 10000,
    "forceExit": true,
    "maxWorkers": 1
  },
  "loopstack": {
    "installModes": [
      "add",
      "install"
    ],
    "modules": [
      {
        "path": "src/dynamic-routing-example.module.ts",
        "className": "DynamicRoutingExampleModule"
      }
    ],
    "workflows": [
      {
        "path": "src/dynamic-routing-example.workflow.ts",
        "className": "DynamicRoutingExampleWorkflow",
        "propertyName": "dynamicRoutingExample"
      }
    ]
  }
}
