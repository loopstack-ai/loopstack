{
  "name": "@loopstack/accessing-tool-results-example-workflow",
  "displayName": "Loopstack Tool Results Example",
  "description": "A simple workflow showing different methods of how to access tool results in a subsequent workflow step.",
  "keywords": [
    "assign",
    "example",
    "helper",
    "results",
    "tool",
    "workflow"
  ],
  "version": "0.20.4",
  "license": "Apache-2.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/common": "^0.21.0",
    "@loopstack/core-ui-module": "^0.20.4",
    "@loopstack/create-chat-message-tool": "^0.20.4",
    "@loopstack/create-value-tool": "^0.20.4",
    "@nestjs/common": "^11.1.14",
    "zod": "^4.3.6"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "maxWorkers": 1,
    "testTimeout": 10000,
    "forceExit": true
  },
  "loopstack": {
    "installModes": [
      "add",
      "install"
    ],
    "modules": [
      {
        "path": "src/tool-results-example.module.ts",
        "className": "ToolResultsExampleModule"
      }
    ],
    "workflows": [
      {
        "path": "src/workflow-tool-results.workflow.ts",
        "className": "WorkflowToolResultsWorkflow",
        "propertyName": "workflowToolResults"
      }
    ]
  }
}
