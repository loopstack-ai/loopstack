{
  "name": "@loopstack/tool-call-example-workflow",
  "displayName": "Loopstack Tool Calling Example Workflow",
  "description": "A simple workflow showing how to implement tool calling in an agentic loopstack workflow.",
  "keywords": [
    "agentic",
    "example",
    "llm",
    "tool calling",
    "workflow"
  ],
  "version": "0.20.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/ai-module": "^0.20.0",
    "@loopstack/common": "^0.20.0",
    "@loopstack/core-ui-module": "^0.20.0",
    "@nestjs/common": "^11.1.12",
    "zod": "^4.3.5"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "testEnvironment": "node",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testTimeout": 10000,
    "forceExit": true,
    "maxWorkers": 1
  },
  "loopstack": {
    "module": "src/tool-calling-example.module.ts",
    "workflows": [
      "src/tool-call.workflow.ts"
    ]
  }
}
