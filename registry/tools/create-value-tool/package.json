{
  "name": "@loopstack/create-value-tool",
  "displayName": "Loopstack Create Value Tool",
  "description": "A simple tool that logs and returns a value of a loopstack workflow. This is useful for debugging or initializing workflow context variables.",
  "keywords": [
    "context",
    "debug",
    "tool",
    "variable"
  ],
  "version": "0.19.0-rc.1",
  "license": "Apache-2.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/common": "^0.19.0-rc.1",
    "@nestjs/common": "^11.1.12",
    "zod": "^4.3.5"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "maxWorkers": 1
  },
  "loopstack": {
    "module": "src/create-value-tool.module.ts"
  }
}
