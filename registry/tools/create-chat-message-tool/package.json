{
  "name": "@loopstack/create-chat-message-tool",
  "displayName": "Loopstack Create Chat Message Tool",
  "description": "A tool to create chat messages from in a workflow",
  "keywords": [
    "chat",
    "loopstack",
    "messages",
    "tool"
  ],
  "version": "0.20.2",
  "license": "Apache-2.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/common": "^0.20.3",
    "@loopstack/core-ui-module": "^0.20.2",
    "@nestjs/common": "^11.1.12",
    "zod": "^4.3.5"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "maxWorkers": 1
  },
  "loopstack": {
    "module": "src/create-chat-message-tool.module.ts",
    "installModes": [
      "add",
      "install"
    ]
  }
}
