{
  "name": "@loopstack/sandbox-tool",
  "displayName": "Sandbox Tool",
  "description": "Provides isolated execution environments for running untrusted or experimental code within Loopstack workflows",
  "keywords": [
    "docker",
    "isolated-execution",
    "loopstack",
    "sandbox"
  ],
  "version": "0.4.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Tobias Bl√§ttermann, Jakob Klippel"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/common": "^0.20.0",
    "@nestjs/common": "^11.1.12",
    "dockerode": "^4.0.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.34"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "testEnvironment": "node",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testTimeout": 10000,
    "forceExit": true,
    "maxWorkers": 1
  },
  "loopstack": {
    "module": "src/sandbox-tool.module.ts"
  }
}
