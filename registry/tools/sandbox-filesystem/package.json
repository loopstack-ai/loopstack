{
  "name": "@loopstack/sandbox-filesystem",
  "displayName": "Sandbox Filesystem",
  "description": "Secure, controlled filesystem operations within Docker sandbox environments",
  "keywords": [
    "docker",
    "filesystem",
    "sandbox"
  ],
  "version": "0.4.4-rc.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Tobias Bl√§ttermann, Jakob Klippel"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/common": "^0.21.0-rc.0",
    "@loopstack/sandbox-tool": "^0.4.4-rc.0",
    "@nestjs/common": "^11.1.14",
    "zod": "^4.3.6"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "testEnvironment": "node",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testTimeout": 10000,
    "forceExit": true,
    "maxWorkers": 1
  },
  "loopstack": {
    "modules": [
      {
        "path": "src/sandbox-filesystem.module.ts",
        "className": "SandboxFilesystemModule"
      }
    ],
    "installModes": [
      "add",
      "install"
    ]
  }
}
