{
  "name": "@loopstack/oauth-module",
  "displayName": "Loopstack OAuth Module",
  "description": "A provider-agnostic OAuth 2.0 module for the Loopstack automation framework. Provides a generic OAuth workflow, token storage, and a provider registry so any OAuth provider (Google, Microsoft, GitHub, etc.) can be plugged in.",
  "keywords": [
    "authentication",
    "loopstack",
    "module",
    "oauth"
  ],
  "version": "0.1.3",
  "license": "Apache-2.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/common": "^0.21.0",
    "@loopstack/core-ui-module": "^0.20.4",
    "@loopstack/create-chat-message-tool": "^0.20.4",
    "zod": "^4.3.6"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "maxWorkers": 1
  },
  "loopstack": {
    "modules": [
      {
        "path": "src/oauth.module.ts",
        "className": "OAuthModule"
      }
    ],
    "workflows": [
      {
        "path": "src/workflows/oauth.workflow.ts",
        "className": "OAuthWorkflow",
        "propertyName": "oAuth"
      }
    ],
    "installModes": [
      "add",
      "install"
    ]
  }
}
