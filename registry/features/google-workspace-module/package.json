{
  "name": "@loopstack/google-workspace-module",
  "displayName": "Google Workspace Module",
  "description": "Google Workspace integration for the Loopstack automation framework. Provides a Google OAuth 2.0 provider and tools for Google Workspace services such as Calendar, Drive, and Gmail.",
  "keywords": [
    "oauth",
    "authentication",
    "google",
    "google-workspace",
    "calendar",
    "loopstack",
    "module"
  ],
  "version": "0.1.0",
  "license": "Apache-2.0",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "nest build",
    "compile": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --passWithNoTests",
    "watch": "nest build --watch"
  },
  "dependencies": {
    "@loopstack/oauth-module": "^0.1.0",
    "zod": "^4.3.5"
  },
  "files": [
    "dist",
    "src"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "maxWorkers": 1
  },
  "loopstack": {
    "modules": [
      {
        "path": "src/google-workspace.module.ts",
        "className": "GoogleWorkspaceModule"
      },
      {
        "package": "@loopstack/oauth-module",
        "className": "OAuthModule"
      }
    ],
    "workflows": [
      {
        "package": "@loopstack/oauth-module",
        "className": "OAuthWorkflow",
        "propertyName": "oAuth"
      }
    ],
    "installModes": [
      "add",
      "install"
    ]
  }
}
