{
  "name": "@loopstack/api",
  "displayName": "Loopstack Api Module",
  "description": "The api module of the loopstack automation framework",
  "version": "0.17.0",
  "license": "BSL",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nest build",
    "watch": "nest build --watch",
    "compile": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@loopstack/auth": "^0.16.1",
    "@loopstack/common": "^0.17.0",
    "@loopstack/contracts": "^0.16.0",
    "@loopstack/core": "^0.17.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/swagger": "^11.0.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "lodash": "^4.17.21",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "@nestjs/typeorm": "^11.0.0",
    "typeorm": "^0.3.25"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10"
  }
}
