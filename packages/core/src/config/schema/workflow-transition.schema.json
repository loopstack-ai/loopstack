{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "workflow-transition.schema.json",
  "type": "object",
  "properties": {
    "from": {
      "type": "string"
    },
    "to": {
      "type": "string"
    },
    "trigger": {
      "type": "string",
      "enum": [
        "manual",
        "auto"
      ]
    }
  },
  "required": ["from", "to", "trigger"]
}