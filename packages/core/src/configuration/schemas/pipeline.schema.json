{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://loopstack.ai/schemas/pipeline.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "options": {
      "type": "object",
      "properties": {
        "contextCarryOver": {
          "type": "boolean"
        }
      }
    },
    "sequence": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "required": ["name"]
      }
    },
    "factory": {
      "type": "object",
      "properties": {
        "pipeline": {
          "type": "string"
        },
        "props": {
          "type": "object",
          "properties": {
            "name": {
              "oneOf": [
                { "type": "string" },
                { "$ref": "https://loopstack.ai/schemas/function-from.schema.json"}
              ]
            }
          },
          "required": [
            "name"
          ]
        }
      },
      "required": ["pipeline", "props"]
    },
    "before": {
      "type": "array",
      "items": {
        "$ref": "https://loopstack.ai/schemas/util.schema.json"
      }
    },
    "after": {
      "type": "array",
      "items": {
        "$ref": "https://loopstack.ai/schemas/util.schema.json"
      }
    }
  },
  "oneOf": [
    { "required": ["name", "factory"] },
    { "required": ["name", "sequence"] }
  ]
}