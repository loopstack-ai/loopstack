{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://loopstack.ai/schemas/workflow-template.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "extends": {
      "type": "string"
    },
    "transitions": {
      "type": "array",
      "items": {
        "$ref": "https://loopstack.ai/schemas/workflow-transition.schema.json"
      }
    },
    "observers": {
      "type": "array",
      "items": {
        "$ref": "https://loopstack.ai/schemas/workflow-observer.schema.json"
      }
    }
  },
  "required": ["name", "transitions", "observers"]
}