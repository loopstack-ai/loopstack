{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "entity.schema.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "schema": {
      "type": "object",
      "description": "JSON schema for this entity"
    },
    "validator": {
      "type": "string",
      "description": "Custom validator to be used for this entity"
    },
    "entity": {
      "type": "string",
      "description": "Custom entity class to be used for this entity"
    }
  },
  "oneOf": [
    { "required": ["schema"] },
    { "required": ["entity"] }
  ]
}