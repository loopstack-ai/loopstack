{
  "name": "@loopstack/contracts",
  "displayName": "Loopstack Contracts",
  "description": "A collection of types and schemas shared between projects",
  "version": "0.16.0",
  "license": "BSL",
  "author": {
    "name": "Jakob Klippel",
    "url": "https://www.linkedin.com/in/jakob-klippel/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./enums": {
      "types": "./dist/enums/index.d.ts",
      "default": "./dist/enums/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "default": "./dist/schemas/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "types": [
        "./dist/types/index.d.ts"
      ],
      "enums": [
        "./dist/enums/index.d.ts"
      ],
      "schemas": [
        "./dist/schemas/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc --watch",
    "compile": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "peerDependencies": {
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.1",
    "@types/node": "^22.13.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.46.3",
    "zod": "^3.25.76"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint"
    ],
    "*.{json,md,css,yaml,yml}": [
      "prettier --check"
    ]
  }
}
